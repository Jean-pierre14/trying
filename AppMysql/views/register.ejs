                                        <div class="form-group col-md-6 col-sm-12">
                                            <label for="phone">Telephone</label>
                                            <input type="tel" name="phone" id="phone"  value="<%= typeof phone != 'undefined' ? phone: '' %>" placeholder="+243976353543" class="form-control shadow">
                                        </div>
                                        <div class="form-group col-md-12 col-sm-12">
                                            <label for="motif">Motif</label>
                                            <textarea name="motif" id="motif" placeholder="Motif de son veni ici" value="<%= typeof motif != 'undefined' ? motif: '' %>" class="shadow p-1 form-control"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 col-lg-12 col-sm-12">
