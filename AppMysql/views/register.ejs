                                        <div class="form-group col-md-6 col-sm-12">
                                            <label for="profession">Profession</label>
                                            <input type="text" name="profession" id="profession"  value="<%= typeof profession != 'undefined' ? profession: '' %>" placeholder="Profession" class="form-control shadow">
