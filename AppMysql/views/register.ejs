                                        <div class="form-group col-md-6 col-sm-12">
                                            <label for="parente">Degree de parent</label>
                                            <input type="text" name="parente" id="parente"  value="<%= typeof parente != 'undefined' ? parente: '' %>" placeholder="Parente" class="form-control shadow">
